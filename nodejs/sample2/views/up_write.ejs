<%-include('header.ejs') %>

<!-- Begin page content -->
<main role="main" class="flex-shrink-0">
<div class="container">
<section>
    <div class="row"> <!-- row는 하위 div를 12개를 사용 할 수 있다. -->
        <!-- <div class="col-해상도-숫자(하위 div에서 사용하는 사이즈. 총합이 12가 되어야 한다.)"></div> -->
        <div class="col-md-12">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title mt-5">게시판</h3>
                </div>

                <!-- 절대경로 /board/register -->
                <form role="form" method="post" action="./up_writePro" enctype="application/x-www-form-urlencoded">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="title">상품명</label> <input type="text" class="form-control"
                                name="p_name" id="p_name" placeholder="상품명">
                        </div>
                        <div class="form-group">
                            <label for="writer">이미지</label> 
                            <input type="file" class="form-control" name="p_img" id="p_img">
                        </div>
                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">저장</button>
                        <button type="reset" id="btn_cancel" class="btn btn-primary">취소</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>
</div>
</main>
</body>
</html>